<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_5sdp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_210sdp"
        app:elevation="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/image_meal"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/image_meal"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_190sdp"
            android:layout_marginTop="@dimen/_60sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.78"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/description"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_90sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/image_meal"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />


        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_90sdp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_minus"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_145sdp"
            android:layout_marginLeft="@dimen/_180sdp"
            app:srcCompat="@drawable/minus" />
        <ImageView
            android:id="@+id/image_plus"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_145sdp"
            android:layout_marginLeft="@dimen/_250sdp"
            app:srcCompat="@drawable/plus" />

        <TextView
            android:id="@+id/Number"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:textColor="@color/black"
            tools:text="0"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_marginLeft="@dimen/_220sdp"
           />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:text="Price"
            android:textColor="@color/wattermilon"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_180sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            />
        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:text="Total price"
            android:textColor="@color/wattermilon"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_180sdp"
            android:layout_marginLeft="@dimen/_140sdp"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>